{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ES2023"],
    "module": "node16",
    "target": "ES2022",
    "checkJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictFunctionTypes": true,
    "types": [ "node" ],
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "declaration": true
  },
}
